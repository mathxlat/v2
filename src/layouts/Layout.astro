---
import "@fontsource-variable/roboto-mono";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Contrata a un estudiante de Tecnicatura Universitaria En Sistemas Informáticos en la Universidad Tecnológica Nacional, Desarrollador de Software y entusiasta de la programación."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/v2/favicon.ico" />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Mathías Ezequiel Latrónico" />
    <meta name="keywords" content="mathxlat" />

    <!-- TODO: completar el canonical -->
    <!-- <link rel="canonical" href="https://mathxlat.dev" /> -->

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://mathxlat.github.io/v2/" />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Porfolio de Desarrollador y Programador de Software"
    />
    <meta
      property="og:description"
      content="Contrata a un estudiante de Tecnicatura Universitaria En Sistemas Informáticos en la Universidad Tecnológica Nacional, Desarrollador de Software y entusiasta de la programación."
    />
    <meta property="og:image" content="/v2/android-chrome-512x512.png" />
    <meta property="og:image:alt" content="Logo de portfolio de mathxlat" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="mathxlat.github.io" />
    <meta property="twitter:url" content="https://mathxlat.github.io/v2/" />
    <meta
      name="twitter:title"
      content="Porfolio de Desarrollador y Programador de Software"
    />
    <meta
      name="twitter:description"
      content="Contrata a un estudiante de Tecnicatura Universitaria En Sistemas Informáticos en la Universidad Tecnológica Nacional, Desarrollador de Software y entusiasta de la programación."
    />
    <meta name="twitter:image" content="/v2/android-chrome-512x512.png" />

    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/v2/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/v2/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/v2/favicon-16x16.png"
    />
    <link rel="manifest" href="/v2/site.webmanifest" />

    <meta name="theme-color" content="#000" />
    <title>{title}</title>
  </head>
  <body class="bg-black pb-32">
    <Header />
    <main class="flex flex-col max-w-2xl m-auto px-4 gap-4">
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  html {
    font-family: "Roboto Mono Variable", monospace;
    color-scheme: dark light;
  }
</style>
