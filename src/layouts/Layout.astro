---
import "@fontsource-variable/roboto-mono";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Portfolio Mathías Ezequiel Latrónico, desarrollador de software y estudiante de Tecnicatura Universitaria En Sistemas Informáticos en la UTN"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="robots" content="index, follow" />
    <!-- TODO: completar los meta tags -->
    <meta property="og:title" content="Porfolio de desarrollador de software" />
    <meta
      property="og:description"
      content="Porfolio de un estudiante de Tecnicatura Universitaria En Sistemas Informáticos"
    />
    <meta property="og:image" content="/image/yo.jpg" />
    <meta property="og:image:alt" content="Una imagen generada por IA" />
    <!-- TODO: completar el canonical -->
    <link rel="canonical" href="https://mathxlat.dev" />

    <meta name="theme-color" content="#09f" />
    <title>{title}</title>
  </head>
  <body class="bg-black pb-32">
    <Header />
    <main class="flex flex-col max-w-2xl m-auto px-4 gap-4">
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  html {
    font-family: "Roboto Mono Variable", monospace;
    color-scheme: dark light;
  }
</style>
